{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-z]{2}-[A-Z]{2}$": {
      "type": "object",
      "properties": {
        "trending": {
          "type": "object",
          "properties": {
            "search":{
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": ["search", "name"]
        },
        "watchLater": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "required": ["name"]
        },
        "details": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "genres": {
              "type": "string"
            },
            "streaming": {
              "type": "string"
            },
            "buy": {
              "type": "string"
            },
            "rent": {
              "type": "string"
            },
            "available": {
              "type": "string"
            },
            "notFound": {
              "type": "string"
            }
          },
          "required": ["description", "genres", "streaming", "buy", "rent", "available", "notFound"],
          "additionalProperties": false
        },
        "countries": {
          "type": "object",
          "properties": {
            "brazil": {
              "type":"string"
            },
            "portugal": {
              "type":"string"
            },
            "us": {
              "type":"string"
            }
          },
          "required": ["brazil", "portugal", "us"],
          "additionalProperties": false
        },
        "global": {
          "type": "object",
          "properties": {
            "tv": {
              "type":"string"
            },
            "movie": {
              "type":"string"
            }
          },
          "required": ["tv", "movie"],
          "additionalProperties": false
        }
      },
      "required": ["trending","details", "countries", "global", "watchLater"],
      "additionalProperties": false
    }
  }
}
